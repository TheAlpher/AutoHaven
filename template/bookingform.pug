head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title Booking Form
    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.6.3/css/all.css' integrity='sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/' crossorigin='anonymous')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css')
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
    link(rel='stylesheet' href='../css/bookingform.css')    
include nav
.d-flex.justify-content-center.bg( style='  padding-top:15vh; padding-bottom:20vh !important;')
    .col-lg-6.d-flex.justify-content-center.bg1(style='padding-bottom:10vh; border:1px solid yellow ;border-radius:8px;box-shadow: 5px 5px 5px 5px #888888;')
        .container.col-lg-9
            form.form.form-horizontal.form-signup
                .d-flex.justify-content-center
                    img.mt-2(src='../img/home/logomini.png' alt='' height='100')
                h3.text-center.mb-5 Booking Form
                .form-group
                    label.col-lg-12.control-label(for='firstName') First Name
                    .col-lg-12
                        input#firstName.form-control(type='text' autocomplete='off' placeholder='First Name' autofocus='' value=user.fName disabled=" ") 
                .form-group
                    label.col-lg-12.control-label(for='lastName') Last Name
                    .col-lg-12
                        input#lastName.form-control(type='text' autocomplete='off' placeholder='Last Name' autofocus='' value=user.lName disabled=" ")
                .form-group
                    label.col-lg-12.control-label(for='email') Email* 
                    .col-lg-12
                        input#email.form-control(type='email' autocomplete="off" placeholder='Email' name='email' value=user.email disabled=" ")
                .form-group
                    label.col-lg-12.control-label(for='carbrand') Car Brand
                    .col-lg-12
                        input#carbrand.form-control(type='text' autocomplete='off' placeholder='Car Brand' autofocus='' value=car.Brand disabled=" ")
                .form-group
                    label.col-lg-12.control-label(for='carmodel') Car Model
                    .col-lg-12
                        input#carmodel.form-control(type='text' autocomplete='off' placeholder='Car Model' autofocus='' value=car.Model disabled=" ")
                .form-group
                    label.col-lg-12.control-label(for='carrent') Car Rent Per Day
                    .col-lg-12
                        input#carrent.form-control(type='text' autocomplete='off' placeholder='Car Model' autofocus='' value=car.Rent disabled=" ")                        
                .form-group
                    label.col-lg-12.control-label(for='picklocation') Location
                    //- .col-lg-12    
                    //-     select#picklocation.form-control(placeholder='Pick Location')
                    //-         option.text-dark.bg-transparent.font-weight-lighter(selected='' disabled='') Pick Location
                    //-         option.text-dark.bg-transparent.font-weight-lighter Delhi
                    //-         option.text-dark.bg-white.font-weight-lighter Noida
                    //-         option.text-dark.bg-white.font-weight-lighter Gurugram
                    .col-lg-12
                        small.form-text.text-muted.text-center Click to add a marker and select your location
                        #map(style='height:40vh; width:100%;')
                        #mapcheck.text-center(style="text-align:center ; color:grey;") Select A location 
                .form-group
                    label.col-lg-12.control-label(for='date') Pickup Date
                    .col-lg-12
                        input#date.form-control(type="date" )                                                         
                .form-group
                    label.col-lg-12.control-label(for='days') Booked for Number of Days
                    .col-lg-12
                        input#days.form-control(type="Number" min="1")                                                                                     
                .form-group
                    label.col-lg-12.control-label(for='tel') Contact No. 
                    .col-lg-12
                        input#tel.form-control(type='tel' autocomplete='off' placeholder='Contact No' name='contact' value=user.contact disabled=" ")
                .form-group
                    .col-lg-12.col-sm-offset-3
                        span.help-block All fields are compuslory
                button#newbooking.btn.btn-warning.btn-block(type='submit') Book
                #checkname.form-text.text-center #{car.img1}
                #checkname1.form-text.text-center abcd
            // /form
            // ./container
include footer
