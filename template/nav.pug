    ul.nav.nav1.navbar-nav.ml-auto(style='margin-right:10vw !important')
      li
        a.nav-item.nav-link.text-light(href='/home')
          | Home 
          span.sr-only (current)
      li
        a.nav-item.nav-link.text-light(href='/team') Team
      li
        a.nav-item.nav-link.active.text-light(href='/about-us') About Us
      li
        a.nav-item.nav-link.text-light(href='/contact-us') Contact
      li
        a.nav-item.nav-link.text-light(href='/car-catalogue') Cars
      if user
        li
          .d-flex
            a(href="/#" style="text-decoration:none !important;")
              img.mt-1(src="/img/team/team-mem-min/team-mem-thumb-1.png" style="border:2px solid #ECFA60; border-radius:50%; height:8vh !important;", alt="", srcset="").img_profile
            a(href="/#" style="text-decoration:none !important;") 
              .username.pl-3.pt-2.text-light #{user.fName} 
        li
          a.nav-item.nav-link.text-light(href='#').logout LogOut
      else
        li 
          a.nav-item.nav-link.text-light(href='/signup') SignUp
        li 
          a.nav-item.nav-link.text-light(href='/login') Login
